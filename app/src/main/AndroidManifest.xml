<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.net.fims.fibox" >


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:name="my.net.fims.fibox.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="my.net.fims.fibox.permission.C2D_MESSAGE" />

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Views.Register"></activity>
        <activity android:name=".Views.Conversation"></activity>
        <activity android:name=".Views.Contact"></activity>
        <activity android:name=".Views.Chat"></activity>

        <meta-data android:name="DATABASE" android:value="fiboxdb.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="my.net.fims.fibox" />


        <receiver
            android:name="my.net.fims.fibox.Controller.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="my.net.fims.fibox.chatmessage" />
                <category android:name="my.net.fims.fibox" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
